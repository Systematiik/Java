public class DNA{
    
    String s;
    
    public DNA() throws FileNotFoundException{
        
        //Variables used for reading user input and finding the called file
        String fileName;
        File textFile;
        //used to store the characters in the text file as an array
        char[][] tArray;
        
        //Prompts the user for the name of a text file
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the name of the text file: ");
        fileName = sc.next();
        
        //sets the user input as the file
        textFile = new File(fileName);
        System.out.println("--------");
        
        //the scanner to reads tries to find the file
        try{
            sc = new Scanner(textFile);
        }
        catch(FileNotFoundException e){
            e.printStackTrace();
            System.out.println("Failed.");
            sc.close();
        }
        
        //parses the first integer to read 
        int t = Integer.parseInt(sc.next());
        
        //loops to the number of strands present in the file
        for(int i = 0; i < t;i++){
            tArray = new char[t][];
            int t1 = Integer.parseInt(sc.next());
                //loops through each character as a string in each strand
                for(int j = 0; j < t1;j++){
                    s = sc.next();
                    char[] c = s.toCharArray();
                    //used to display the reverse complement of each strand
                    boolean sRev = reverseComplement(c);
                    //Array[t][t1] = s[t1];
                    System.err.print("DNA Strand: "  + s + "\n");
                    System.out.print("Reverse Complement: " + sRev);
                }
                
        }
        sc.close();
}
    //Reverses the requested strands complement
    private boolean reverseComplement(char[] c){
        boolean rComplement = false;
        
        String rev = "";
        
        //Reverses the order of the strand
        for(int i = c.length - 1; i >= 0; i--){
            rev = rev + c[i];
        }
        
        //finds whether the reverse complement is the same as the original
        if(s.equals(rev)){
            rComplement = true;
            System.out.println(rev);
        }
        else{
            rComplement = false;
        }
        return rComplement;
    }

    public DNA() throws FileNotFoundException{
        
        //Variables used for reading user input and finding the called file
        String fileName;
        File textFile;
        
        //Prompts the user for the name of a text file
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the name of the text file: ");
        fileName = sc.next();
        
        //sets the user input as the file
        textFile = new File(fileName);
        System.out.println("--------");
        
        //the scanner to reads tries to find the file
        try{
            sc = new Scanner(textFile);
        }
        catch(FileNotFoundException e){
            e.printStackTrace();
            System.out.println("Failed.");
            sc.close();
        }
        
        //parses the integers in the file
        int t = Integer.parseInt(sc.next());
        int t1 = Integer.parseInt(sc.next());
        String t2 = sc.nextLine();
        
        int[][] tArray = new int[t][];
        System.err.println(t + " "+ t1 + " " + t2);
        
        System.out.println("--------");
        
        for(int i = 0; i <= t1; i++)
        {
            if(sc.hasNext()){
                char[] c1 = sc.nextLine().toCharArray();
                System.err.println(c1);
            }
        }
        System.out.println("--------");
        
        //reads and writes the text file
        while(sc.hasNext())
                 {
                 char[] c = sc.nextLine().toCharArray();
                 System.err.println(c);
                 }
        
        System.out.println("---------------------------------------");
        //char cd = sc.next().charAt(0);
        //System.err.println(cd);
        
        sc.close();
}

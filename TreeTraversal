    public void readTree(){
    file = new File("assn2in.txt");
    
    try(Scanner sc = new Scanner(file)){
     while(sc.hasNext())
                 {
                 char[] c = sc.nextLine().toCharArray();
                 System.out.println(c);
                 }  
    }
    catch(FileNotFoundException e){
        e.printStackTrace();
        System.out.println("Failed Operation.");
    }
    }
    
    
